mixin Card--recomendados(img,titulo,descripcion)
  .Card
    div(class="w-full h-3/5 rounded-t-lg bg-cover bg-"+img)
    div(class=" w-full h-2/5 rounded-b-lg pl-4 pt-4")
      p.font-bold.text-xl=titulo 
      p.text-base=descripcion 

mixin  Card--rentas(img,nombre,descripcion)
  div(class="w-full h-96 bg-"+ img +" bg-cover rounded-2xl")
      p(class="CardTitulo")=nombre
      p(class="text-base pl-8   text-white mr-8")=descripcion 